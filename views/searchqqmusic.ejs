<script src="/assets/js/jquery.min.js"></script>
<script src="assets/js/popper.min.js"></script>
<script src="assets/js/bootstrap.min.js"></script>
<script src="/assets/js/scripts.js"></script>
<script>
    let name=$('#title').text().trim();
    $("#kugou-tab").click(function (e) {
        e.preventDefault();
        $.ajax({
            url:`/searchkugou?name=${name}`,
            type:"GET",
            success:function () {
                window.location=`/searchkugou?name=${name}`;
            }
        })
    });
    $("#netease-tab").click(function (e) {
        e.preventDefault();
        $.get(`/searchnetease?name=${name}`,null,function () {
            window.location=`/searchnetease?name=${name}`;
        });
    });
</script>
</body>
</html>